<script>
  // Tab functionality
  const tabBtns = document.querySelectorAll(".tab-btn");
  const tabFemei = document.getElementById("content-femei");
  const tabBarbati = document.getElementById("content-barbati");

  if (tabFemei && tabBarbati) {
    tabBtns.forEach((btn) => {
      btn.addEventListener("click", () => {
        // Reset active state for all tabs
        tabBtns.forEach((b) =>
          b.classList.remove("active", "border-pink-600", "text-pink-600")
        );
        // Hide all content
        tabFemei.classList.add("hidden");
        tabBarbati.classList.add("hidden");

        // Add active styles
        btn.classList.add("active", "border-pink-600", "text-pink-600");

        // Show selected content
        if (btn.id === "tab-femei") {
          tabFemei.classList.remove("hidden");
        } else if (btn.id === "tab-barbati") {
          tabBarbati.classList.remove("hidden");
        }
      });
    });
  }
</script>

