---
import Layout from "../../layouts/Layout.astro";
import VoucherFormReact from "../../components/VoucherFormReact";

const title = "Voucher Gratuit 50% Reducere | SIA Skin Center";
const description =
  "Obține un voucher gratuit cu 50% reducere la epilarea definitivă cu laser FULL BODY în București. Doar 8 vouchere disponibile!";
---

<Layout title={title} description={description}>
  <section
    class="relative py-24 px-7 sm:px-0 sm:py-28 md:py-32 bg-gradient-to-b from-[rgb(var(--primary-50))] to-[rgb(var(--background))] dark:from-[rgb(var(--primary-200))] dark:to-[rgb(var(--background))] overflow-hidden transition-theme"
  >
    <!-- Background decorative elements -->
    <div
      class="absolute top-0 right-0 w-1/3 h-1/3 bg-[rgb(var(--primary-100))] dark:bg-[rgb(var(--primary-700))]/30 opacity-30 dark:opacity-20 rounded-bl-full -z-10"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-1/4 h-1/4 bg-[rgb(var(--secondary-400))] opacity-10 rounded-tr-full -z-10"
    >
    </div>

    <div class="container mx-auto px-3 sm:px-4">
      <div class="max-w-5xl mx-auto">
        <!-- React Form Component -->
        <VoucherFormReact client:load />

        <!-- Benefits Section -->
        <div class="mt-12 md:mt-16" data-aos="fade-up">
          <div class="text-center mb-6">
            <h3
              class="text-xl sm:text-2xl font-bold text-[rgb(var(--text-primary))]"
            >
              Te-ai săturat de epilatul constant, iritații și fire crescute sub
              piele? ❌
            </h3>
            <p class="text-lg mt-3 text-[rgb(var(--text-secondary))]">
              E timpul să încerci epilarea definitivă, fără durere, cu rezultate
              reale! ✨
            </p>
          </div>

          <div
            class="bg-[rgb(var(--primary-50))] dark:bg-[rgb(var(--card))] rounded-xl p-4 sm:p-6 shadow-md transition-theme"
          >
            <div class="text-center mb-4">
              <p
                class="text-base sm:text-lg font-semibold text-[rgb(var(--text-primary))]"
              >
                📍 Vino la SIA SkinCenter
              </p>
              <p class="text-sm sm:text-base text-[rgb(var(--text-secondary))]">
                Str. Antiaeriană 67C, București
              </p>
            </div>

            <div class="mt-6">
              <h4
                class="text-center text-base sm:text-lg font-bold text-[rgb(var(--text-primary))] mb-4"
              >
                👉 AVANTAJE:
              </h4>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                <div
                  class="bg-[rgb(var(--feature-box-bg))] p-3 rounded-lg shadow-sm text-center border border-[rgb(var(--feature-box-border))] transition-theme"
                >
                  <p
                    class="text-sm sm:text-base text-[rgb(var(--feature-box-text))]"
                  >
                    ✅ Fără durere
                  </p>
                </div>
                <div
                  class="bg-[rgb(var(--feature-box-bg))] p-3 rounded-lg shadow-sm text-center border border-[rgb(var(--feature-box-border))] transition-theme"
                >
                  <p
                    class="text-sm sm:text-base text-[rgb(var(--feature-box-text))]"
                  >
                    ✅ Piele fină după prima ședință
                  </p>
                </div>
                <div
                  class="bg-[rgb(var(--feature-box-bg))] p-3 rounded-lg shadow-sm text-center border border-[rgb(var(--feature-box-border))] transition-theme"
                >
                  <p
                    class="text-sm sm:text-base text-[rgb(var(--feature-box-text))]"
                  >
                    ✅ Rezultate de lungă durată
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
