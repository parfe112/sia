---
import Layout from "../../layouts/Layout.astro";
import VoucherFormReact from "../../components/VoucherFormReact";

const title = "Voucher Gratuit 50% Reducere | SIA Skin Center";
const description =
  "Obține un voucher gratuit cu 50% reducere la epilarea definitivă cu laser FULL BODY în București. Doar 8 vouchere disponibile!";
---

<Layout title={title} description={description}>
  <section
    class="relative py-24 px-7 sm:px-0 sm:py-28 md:py-32 bg-gradient-to-b from-primary-50 to-white overflow-hidden"
  >
    <!-- Background decorative elements -->
    <div
      class="absolute top-0 right-0 w-1/3 h-1/3 bg-primary-100 opacity-30 rounded-bl-full -z-10"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-1/4 h-1/4 bg-secondary-400 opacity-10 rounded-tr-full -z-10"
    >
    </div>

    <div class="container mx-auto px-3 sm:px-4">
      <div class="max-w-5xl mx-auto">
        <!-- React Form Component -->
        <VoucherFormReact client:load />

        <!-- Benefits Section -->
        <div class="mt-12 md:mt-16" data-aos="fade-up">
          <div class="text-center mb-6">
            <h3 class="text-xl sm:text-2xl font-bold text-primary-800">
              Te-ai săturat de epilatul constant, iritații și fire crescute sub
              piele? ❌
            </h3>
            <p class="text-lg mt-3 text-primary-700">
              E timpul să încerci epilarea definitivă, fără durere, cu rezultate
              reale! ✨
            </p>
          </div>

          <div class="bg-primary-50 rounded-xl p-4 sm:p-6 shadow-md">
            <div class="text-center mb-4">
              <p class="text-base sm:text-lg font-semibold text-primary-800">
                📍 Vino la SIA SkinCenter
              </p>
              <p class="text-sm sm:text-base text-primary-700">
                Str. Antiaeriană 67C, București
              </p>
            </div>

            <div class="mt-6">
              <h4
                class="text-center text-base sm:text-lg font-bold text-primary-700 mb-4"
              >
                👉 AVANTAJE:
              </h4>
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-3">
                <div class="bg-white p-3 rounded-lg shadow-sm text-center">
                  <p class="text-sm sm:text-base text-primary-700">
                    ✅ Fără durere
                  </p>
                </div>
                <div class="bg-white p-3 rounded-lg shadow-sm text-center">
                  <p class="text-sm sm:text-base text-primary-700">
                    ✅ Piele fină după prima ședință
                  </p>
                </div>
                <div class="bg-white p-3 rounded-lg shadow-sm text-center">
                  <p class="text-sm sm:text-base text-primary-700">
                    ✅ Rezultate de lungă durată
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
