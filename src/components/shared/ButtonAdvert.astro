---
interface Props {
  href?: string;
  mainText?: string;
  subText?: string;
  discountAmount?: string;
  limitedText?: string;
  target?: string;
}

const {
  href = "/landing/contact-page",
  mainText = "DESCARCĂ VOUCHERUL",
  subText = "Epilare FULL BODY doar 250 RON de la 500 RON",
  discountAmount = "50%",
  limitedText = "Ofertă limitată • Locuri limitate",
  target = "_self",
} = Astro.props;
---

<div class="relative">
  <a
    href={href}
    target={target}
    class="group flex items-center justify-between bg-gradient-to-r from-yellow-400 to-yellow-500 hover:from-yellow-300 hover:to-yellow-400 text-primary-900 font-bold px-6 py-5 rounded-2xl text-lg md:text-xl transition-all duration-300 shadow-lg hover:shadow-xl border-2 border-yellow-300 overflow-hidden w-full max-w-md"
  >
    <div class="flex flex-col items-start">
      <div class="flex items-center">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6 mr-2 text-primary-900"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
          ></path>
        </svg>
        <span class="ml-4 tracking-wide">{mainText}</span>
      </div>
      <span class="text-primary-800/80 text-sm font-normal mt-1">{subText}</span
      >
    </div>

    <div class="relative flex items-center">
      <div
        class="absolute right-8 -top-8 rotate-12 transform transition-transform group-hover:rotate-6 group-hover:scale-110 duration-300"
      >
        <div
          class="bg-red-600 text-white font-bold px-4 py-6 rounded-full flex flex-col items-center justify-center h-16 w-16 shadow-md"
        >
          <span class="text-2xl leading-none">{discountAmount}</span>
          <span class="text-xs uppercase tracking-wider">OFF</span>
        </div>
      </div>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6 ml-4 transition-transform group-hover:translate-x-1 duration-300"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
      </svg>
    </div>

    {
      limitedText && (
        <div class="absolute -bottom-4 right-0 left-0 text-center">
          <span class="bg-red-600/70 backdrop-blur-sm text-white/90 text-xs font-medium px-3 py-1 rounded-full">
            {limitedText}
          </span>
        </div>
      )
    }
  </a>
</div>
