---
// Simple wrapper around Astro's Image component with optimized defaults
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

// Define the types explicitly
export interface Props {
  src: ImageMetadata;
  alt: string;
  width: number;
  height: number;
  class?: string;
  sizes?: string;
  loading?: "eager" | "lazy";
  decoding?: "async" | "sync" | "auto";
  quality?: number;
  format?: "avif" | "webp" | "png" | "jpeg" | "jpg";
  densities?: number[];
}

const {
  src,
  alt,
  width,
  height,
  class: className = "",
  sizes = "(max-width: 768px) 100vw, 50vw",
  loading = "lazy",
  decoding = "async",
  quality = 80,
  format = "webp",
  densities,
} = Astro.props;
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  quality={quality}
  format={format}
  sizes={sizes}
  loading={loading}
  decoding={decoding}
  class={className}
  densities={densities}
/>
