---
import { Image } from "astro:assets";
import logoImage from "../assets/images/logo.png";
import HeaderNavigation from "./shared/HeaderNavigation";
---

<header
  id="mainHeader"
  class="fixed w-full top-0 z-30 transition-all duration-300"
>
  <HeaderNavigation client:load>
    <Image
      src={logoImage}
      alt="SIA Skin Center Logo"
      width={59}
      height={22}
      class="h-8 w-auto"
      loading="eager"
      priority={true}
    />
  </HeaderNavigation>
</header>

<style>
  /* Global styles for mobile menu management */
  :global(body.overflow-hidden) {
    overflow: hidden !important;
    touch-action: none;
  }

  /* Ensure the main header has proper z-index */
  #mainHeader {
    z-index: 30;
  }

  /* Mobile menu z-index handling */
  @media (max-width: 767px) {
    :global(.header-container) {
      position: relative;
      z-index: 30;
    }
  }
</style>
