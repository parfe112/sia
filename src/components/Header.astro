---
import { Image } from "astro:assets";
import logoImage from "../assets/poze/logo.png";
---

<header
  class="fixed top-0 left-0 w-full z-50 bg-white/90 backdrop-blur-md border-b border-gray-100"
>
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <a
        href="/"
        class="flex items-center space-x-2 text-primary-600 font-bold text-2xl"
      >
        <Image
          src={logoImage}
          alt="SIA Skin Center Logo"
          width={56}
          height={42}
          class="h-14 w-auto"
        />
        <span class="text-gray-500 font-normal">Skin Center</span>
      </a>

      <!-- Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        <a
          href="/"
          class="text-gray-600 hover:text-primary-600 font-medium transition-colors"
          >Acasă</a
        >

        <a
          href="/servicii"
          class="text-gray-600 hover:text-primary-600 font-medium transition-colors"
          >Servicii</a
        >

        <a
          href="/preturi"
          class="text-gray-600 hover:text-primary-600 font-medium transition-colors"
          >Prețuri</a
        >
        <a
          href="/contact"
          class="text-gray-600 hover:text-primary-600 font-medium transition-colors"
          >Contact</a
        >
      </nav>

      <!-- CTA -->
      <div class="hidden md:block">
        <a
          href="/#programare"
          class="bg-primary-600 hover:bg-primary-700 text-white font-medium px-6 py-2 rounded-full transition-colors"
        >
          Programare
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden text-gray-600 hover:text-primary-600"
        aria-label="Menu"
        type="button"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-8 w-8"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div
    id="mobile-menu"
    class="md:hidden hidden bg-white border-t border-gray-100 py-4 shadow-md"
  >
    <div class="container mx-auto px-4 py-3 space-y-1">
      <a
        href="/"
        class="block px-4 py-2 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md"
        >Acasă</a
      >

      <!-- Simplified Servicii link, no submenu -->
      <a
        href="/servicii"
        class="block px-4 py-2 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md"
        >Servicii</a
      >

      <a
        href="/preturi"
        class="block px-4 py-2 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md"
        >Prețuri</a
      >
      <a
        href="/contact"
        class="block px-4 py-2 text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md"
        >Contact</a
      >

      <div class="pt-2">
        <a
          href="/#programare"
          class="block w-full bg-primary-600 hover:bg-primary-700 text-white font-medium px-4 py-2 rounded-full text-center transition-colors"
        >
          Programare
        </a>
      </div>
    </div>
  </div>
</header>

<script is:inline>
  // Mobile menu toggle - using is:inline to ensure code runs without bundling issues
  document.addEventListener("DOMContentLoaded", function () {
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener("click", function () {
        mobileMenu.classList.toggle("hidden");
      });
    }
  });
</script>
